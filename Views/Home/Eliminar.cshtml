@model PruebMyper.Models.Trabajadore

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> Estas seguro de eliminar al trabajador?</h3>

<hr />


<div class="row">
    <div class="col-sm-4">
        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="TipoDocumento">TipoDocumento</label>
                <input class="form-control form-control-sm" asp-for="TipoDocumento" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="NumeroDocumento">NumeroDocumento</label>
                <input class="form-control form-control-sm" asp-for="NumeroDocumento" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Sexo">Sexo</label>
                <input class="form-control form-control-sm" asp-for="Sexo" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Nombres">Nombres</label>
                <input class="form-control form-control-sm" asp-for="Nombres" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdDepartamento">Departamento</label>
                <input class="form-control form-control-sm" asp-for="oDepartamento.NombreDepartamento" type="text" disabled />
            </div>


            <div class="mb-3">
                <label class="form-label" asp-for="IdProvincia">Provincia</label>
                <input class="form-control form-control-sm" asp-for="oProvincia.NombreProvincia" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdDistrito">Distrito</label>
                <input class="form-control form-control-sm" asp-for="oDistrito.NombreDistrito" type="text" disabled />
            </div>

            <div class="mb-2">
          
                <button class="btn btn-danger btn-sm w-25" type="submit" onclick="confirmarEliminacion()">Eliminar</button>

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Regresar</a>
            </div>

        </form>
    </div>
</div>

<script>
    function confirmarEliminacion() {
        var confirmacion = confirm("¿Está seguro de eliminar?");
        if (confirmacion) {
           
            window.location.href = '@Url.Action("Eliminar", "Home", new { idTrabajador = Model.Id })';
        }
      
    }
</script>


